@model IEnumerable<Teller.Web.ViewModels.Search.SearchUserViewModel>

<div class="row">
    @if(Model.Count() == 0)
    {
        <h3 class="lead text-center">
            No users
        </h3>
    }
    else
    {
        int counter = 0;
        foreach(var user in Model)
        {
            counter++;
            <div class="col-md-6">
                @Html.DisplayFor(m => user)
            </div>
        
            if(counter % 2 == 0)
            {
                @Html.Raw("</div><p></p><div class=\"row\">")
            }
        }
    }
</div>
