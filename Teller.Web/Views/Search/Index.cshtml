@model Teller.Web.ViewModels.Search.SearchViewModel
@{
    ViewBag.Title = "Search results";
}

<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <div class="well-sm">
            <div class="row">
                <h3 class="lead">
                    <span class="pull-left">
                        Search results for "@Model.Pattern"
                    </span>
                    @if(ViewBag.Pages > 1)
                    {
                        <span class="pull-right">
                            @if(ViewBag.Page > 1)
                            {
                                @Html.ActionLink("<<", "Index", "Search", new { Area = "", pattern = Model.Pattern, page = 1 }, new { @class = "btn btn-sm btn-default" })
                            }
                            else
                            {
                                @Html.ActionLink("<<", null, null, new { }, new { @class = "btn btn-sm btn-default disabled" })
                            }

                            @if(ViewBag.Page > 1)
                            {
                                @Html.ActionLink("<", "Index", "Search", new { Area = "", pattern = Model.Pattern, page = ViewBag.Page - 1 }, new { @class = "btn btn-sm btn-default" })
                            }
                            else
                            {
                                @Html.ActionLink("<", null, null, new { }, new { @class = "btn btn-sm btn-default disabled" })
                            }

                            @for(int i = 1 ; i <= ViewBag.Pages ; i++)
                            {
                                if(ViewBag.Page != i)
                                {
                                    @Html.ActionLink(i.ToString(), "Index", "Search", new { Area = "", pattern = Model.Pattern, page = i }, new { @class = "btn btn-sm btn-default" })
                                }
                                else
                                {
                                    @Html.ActionLink(i.ToString(), null, null, new { }, new { @class = "btn btn-sm btn-default disabled" })
                                }
                            }

                            @if(ViewBag.Page != ViewBag.Pages)
                            {
                                @Html.ActionLink(">", "Index", "Search", new { Area = "", pattern = Model.Pattern, page = ViewBag.Page + 1 }, new { @class = "btn btn-sm btn-default" })
                            }
                            else
                            {
                                @Html.ActionLink(">", null, null, new { }, new { @class = "btn btn-sm btn-default disabled" })
                            }

                            @if(ViewBag.Page != ViewBag.Pages)
                            {
                                @Html.ActionLink(">>", "Index", "Search", new { Area = "", pattern = Model.Pattern, page = ViewBag.Pages }, new { @class = "btn btn-sm btn-default" })
                            }
                            else
                            {
                                @Html.ActionLink(">>", null, null, new { }, new { @class = "btn btn-sm btn-default disabled" })
                            }
                        </span>
                    }
                </h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-9">
                <div class="well">
                    <h5 class="lead">Series</h5>
                    <div>
                        @Html.Partial("_SeriesSummaryPartial", Model.Series)
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="well">
                    <h5 class="lead">Users</h5>
                    <div>
                        @Html.Partial("_UsersSummaryPartial", Model.Users)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="well">
                    <h5 class="lead">Stories</h5>
                    <div>
                        @Html.Partial("_StorySummaryPartial", Model.Stories)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
