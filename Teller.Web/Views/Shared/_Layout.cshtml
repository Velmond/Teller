<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Teller</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Teller", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="navbar-collapse collapse navbar-responsive-collapse">
                        @using(Html.BeginForm("Index", "Search", new { Area = "" }, FormMethod.Post, new { @class = "navbar-form" }))
                        {
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                                    @Html.TextBox("pattern", string.Empty, new { @class = "form-control", placeholder = "Search..." })
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <hr />
            <div class="row text-center">
                <small>&copy; 2014 - Mitko Nikolov</small>
                <div>
                    <small>
                        @Html.RouteLink("About", new { Area = "", Controller = "Home", Action = "About" }, new { @class = "btn btn-sm btn-default" })
                        @Html.RouteLink("Contact", new { Area = "", Controller = "Home", Action = "Contact" }, new { @class = "btn btn-sm btn-default" })
                    </small>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
