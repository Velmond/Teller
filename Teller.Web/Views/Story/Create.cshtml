@model Teller.Web.ViewModels.Story.StoryFormViewModel
@{
    ViewBag.Title = "Post a story";
}

<h2>@ViewBag.Title.</h2>

@using(Html.BeginForm("Create", "Story", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new story.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", style = "max-width: 100%" })
            @*@Html.ValidateFor(m => m.Title)*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", style = "max-width: 100%" })
            @*@Html.ValidateFor(m => m.Content)*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.GenreId, Model.GenresList.List, "-- Select Genre --", new { @class = "form-control", style = "max-width: 100%" })
            @*@Html.ValidateFor(m => m.GenreId)*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PicturePath, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Picture, new { @class = "form-control", type="file", style = "max-width: 100%" })
            @*@Html.ValidateFor(m => m.Content)*@
        </div>
    </div>
    <div id="create-series-form" class="form-group">
        @Html.LabelFor(m => m.SeriesId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="input-group">
                @Html.DropDownListFor(m => m.SeriesId, Model.SeriesList.List, "-- Select Series --", new { @class = "form-control", style = "max-width: 100%" })
                <span class="input-group-btn">
                    @Ajax.ActionLink("Add to new series", "Create", "Series",
                        new { Area = "" },
                        new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "create-series-form", InsertionMode = InsertionMode.ReplaceWith },
                        new { @class = "btn btn-default btn-block" })
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default btn-block" style="max-width: 100%" value="Post Story" />
        </div>
    </div>
}

@section scripts {
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @Scripts.Render("~/bundles/jqueryval");
}
