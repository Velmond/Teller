@model Teller.Web.ViewModels.Story.StoryFormViewModel
@{
    ViewBag.Title = "Post a story";
}

<h2>@ViewBag.Title.</h2>

@using(Html.BeginForm("Create", "Story", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @*@Html.ValidateFor(m => m.Title)*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
            @*@Html.ValidateFor(m => m.Content)*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.GenreId, Model.GenresList.List, "-- Select Genre --", new { @class = "form-control" })
            @*@Html.ValidateFor(m => m.GenreId)*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SeriesId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SeriesId, Model.SeriesList.List, "-- Select Series --", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Post Story" />
        </div>
    </div>
}
